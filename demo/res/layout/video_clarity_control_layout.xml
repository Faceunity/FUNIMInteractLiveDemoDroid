<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/video_clarity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:showIn="@layout/live_player_activity"
    android:visibility="gone">

    <RelativeLayout
        android:id="@+id/video_clarity_blank_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></RelativeLayout>

    <LinearLayout

        android:id="@+id/video_clarity_content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_black_bf000000"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/fl_title"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/video_clarity_title_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="直播清晰度"
                android:textColor="@color/white"
                android:textSize="17dp" />

        </RelativeLayout>


        <View
            android:id="@+id/video_clarity_divider_view_top"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_white_b3ffffff"></View>

        <RelativeLayout
            android:id="@+id/video_clarity_hd_rl"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/video_clarity_hd_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:enabled="false"
                android:text="高清"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/video_clarity_hd_iv"
                android:layout_width="55dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:src="@drawable/background_checked" />

        </RelativeLayout>

        <View
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/video_clarity_divider_view_mid"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_white_b3ffffff"></View>

        <RelativeLayout
            android:id="@+id/video_clarity_sd_rl"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/video_clarity_sd_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:enabled="false"
                android:text="普清"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/video_clarity_sd_iv"
                android:layout_width="55dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:src="@drawable/background_checked" />

        </RelativeLayout>

        <View
            android:id="@+id/video_clarity_divider_bottom"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_white_b3ffffff"></View>

        <TextView
            android:id="@+id/video_clarity_button_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="17dp" />
    </LinearLayout>
</LinearLayout>
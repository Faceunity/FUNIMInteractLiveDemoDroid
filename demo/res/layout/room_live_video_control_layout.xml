<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/control_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:paddingBottom="10dp"
    android:paddingRight="10dp"
    tools:showIn="@layout/live_player_activity">

    <LinearLayout
        android:id="@+id/control_btn_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/input_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/input_icon_selector"
            android:gravity="center" />

        <ImageButton
            android:id="@+id/gift_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/input_btn"
            android:background="@drawable/gift_icon_selector" />

        <TextView
            android:id="@+id/interaction_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/gift_btn"
            android:background="@drawable/ic_interaction_normal"
            android:gravity="center" />

        <ImageButton
            android:id="@+id/switch_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/interaction_btn"
            android:background="@drawable/switch_camera_selector" />

        <ImageButton
            android:id="@+id/pk_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/switch_btn"
            android:background="@drawable/ic_pk_selector" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/control_btn_mid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/control_btn_bottom"
        android:layout_alignLeft="@id/control_btn_bottom"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:visibility="invisible">

        <ImageButton
            android:id="@+id/beauty_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:background="@drawable/ic_beauty_open_selector" />

        <ImageButton
            android:id="@+id/enlarge_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/beauty_btn"
            android:background="@drawable/ic_enlarge_close_selector"
            android:gravity="center" />

        <TextView
            android:id="@+id/hd_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/enlarge_btn"
            android:background="@drawable/ic_mode_normal"
            android:gravity="center"
            android:text="高清"
            android:textColor="@color/color_black_333333" />

        <ImageButton
            android:id="@+id/flash_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/hd_btn"
            android:background="@drawable/ic_flash_close_selector" />

        <ImageButton
            android:id="@+id/mirror_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/flash_btn"
            android:background="@drawable/ic_mirror_close_selector" />



    </LinearLayout>


    <LinearLayout
        android:id="@+id/control_btn_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/control_btn_mid"
        android:layout_alignLeft="@id/control_btn_mid"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:visibility="invisible">

        <ImageButton
            android:id="@+id/mark_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_mark_selector" />

        <ImageButton
            android:id="@+id/music_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/mark_btn"
            android:background="@drawable/background_music_selector" />

        <ImageButton
            android:id="@+id/shot_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/music_btn"
            android:background="@drawable/screen_shot_selector" />

        <ImageButton
            android:id="@+id/share_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/shot_btn"
            android:background="@drawable/ic_share_selector" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/control_extend_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/control_extend_top_selector" />
</RelativeLayout>
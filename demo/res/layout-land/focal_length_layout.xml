<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/focal_length_layout"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_marginTop="70dp"
    android:layout_marginLeft="150dp"
    android:layout_marginRight="150dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:showIn="@layout/live_player_activity"
    android:visibility="gone">

    <ImageView
        android:id="@+id/focal_length_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:src="@drawable/video_focal_length_minus" />

    <SeekBar
        android:id="@+id/focal_length_sb"
        android:layout_marginLeft="15dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content"
        android:max="5"
        android:maxHeight="1dp"
        android:progress="0"
        android:progressDrawable="@drawable/video_focal_length_seekbar_bg"
        android:thumb="@drawable/video_focal_length_seekbar_thumb"  />

    <ImageView
        android:id="@+id/focal_length_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:src="@drawable/video_focal_length_plus" />

</LinearLayout>